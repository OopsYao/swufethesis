  \savebox\somelittlebox{#1}%
  \let\ep\expandafter%
  \ifdim\wd\somelittlebox>\hsize%
    \CJKunderline*{#1\hfill}%
  \else%
    \CJKunderline*{\hfill#1\hfill}%
  \fi%
}
